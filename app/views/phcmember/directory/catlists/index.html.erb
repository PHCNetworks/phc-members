<!-- Bread Crumbs -->
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-10">
		<h2>Directory Listing Information</h2>
		<ol class="breadcrumb">
			<li>
				<a>Home</a>
			</li>
			<li>
				<%= link_to mtdevise.account_root_path, class: "nav-link" do %>
					Directory Category
				<% end %>
			</li>
			<li class="active">
				<%= link_to main_app.backend_directorycategory_directorylistings_path, class: "nav-link" do %>
					Directory Listings
				<% end %>
			</li>
		</ol>
	</div>
  	<div class="col-lg-2">
	</div>
</div>

<!-- Main Content -->
<div class="wrapper wrapper-content">
	<div class="panel">
		<div class="panel-heading">
			<h2><i class="fa fa-lightbulb-o"></i> Listings for <%= @directorycategory.dcname %> </h2> <p>- A complete index of all <%= @directorycategory.dcname %> member listing connections.</p>
		</div>
		<div class="panel-body">
			<table class="table table-bordered table-striped table-hover">
				<tbody>
					<% @directorylistings.each do |directorylistings| %>
						<tr>
							<td><%= directorylistings.directorycategory.dcname %></td>
							<td><%= directorylistings.memberlisting.mlcompanyname %></td>
							<td><%= link_to 'Destroy', directory_catlist, method: :delete, data: { confirm: 'Are you sure? This will only remove the listing from the directory category. The listing will still be saved with the members profile.' }, :class => "btn btn-danger" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to 'New Listing', new_directory_category_catlist_path, :class => "btn btn-primary btn-sm" %>
		</div>
	</div>
</div>
