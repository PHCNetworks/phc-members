<!-- Bread Crumbs -->
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-10">
		<h2>Web Directory Categories &amp; Listings</h2>
		<ol class="breadcrumb">
			<li>
				<%= link_to mtdevise.account_root_path, class: "nav-link" do %>
					Home
				<% end %>
			</li>
			<li class="active">
				<%= link_to main_app.directory_categories_path, class: "nav-link" do %>
					Directory Categories
				<% end %>
			</li>
		</ol>
	</div>
	<div class="col-lg-2">
	</div>
</div>

<!-- Main Contents -->
<div class="wrapper wrapper-content">
	<div class="panel">
		<div class="panel-heading">
			<h2><i class="fa fa-lightbulb-o"></i> Directory Categories &amp; Listings</h2> <p>- A complete index of all your directory categories and connected listings.</p>
		</div>
		<div class="panel-body">
			<table class="table table-bordered table-striped table-hover">
				<thead>
					<tr>
						<th>Category Name</th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<% @directory_categories.each do |directory_category| %>
						<tr>
							<td><%= directory_category.catname %></td>
							<td>
								<div class="btn-group" role="group" aria-label="Directory Group">
									<%= link_to 'Edit', edit_directory_category_path(directory_category), class: "btn btn-primary" %>
									<%= link_to 'Destroy', directory_category, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure? Removing a directory category will also remove all listing connections.?' } %>
								</div>
							</td>
							<td>
								<div class="btn-group" role="group" aria-label="Directory Connection Group">
									<%= link_to  'Connect Member Listings', directory_category_catlists_path(category), :class => "btn btn-success" %>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to 'Add a New Directory Category', new_directory_category_path, class: "btn btn-primary" %>
		</div>
	</div>
</div>
