<!-- Title System -->
<% phc_title  "PHCMembers - Directory Category Manager" %>
<% phc_title_tagline "Directory Category Index" %>

<!-- BreadCrumbs -->
<div class="row">
	<div class="col-lg-12">

		<!-- Bread Crumb -->
		<ol class="breadcrumb">
			<li><%= link_to "Home", directory_root_path %><i class="fa fa-circle"></i></li>
			<li class="active"><%= link_to "Directory Categories", directory_categories_path %></li>
		</ol>

	</div>
</div>


<!-- Page Title -->
<div class="row">
	<div class="col-lg-12">

		<h3 class="page-title">
			<%= yield(:phc_title) %> </br>
			<small><%= yield(:phc_title_tagline) %></small>
		</h3>

	</div>
</div>


<!-- Main Content -->
<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-header">
				<%= yield(:phc_title) %>
			</div>
			<div class="card-block">
				<ul class="list-group">
					<% @directory_categories.each do |directory_category| %>
						<li class="list-group-item">
							<span class="badge badge-default badge-roundless"><%= directory_category.listings.count %></span></span>
							<%= link_to directory_category.catname, directory_category %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>

	</div>
</div>
