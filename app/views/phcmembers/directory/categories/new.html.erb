<!-- Title System -->
<% phc_title  "PHCMembers - Directory Category Manager" %>
<% phc_title_tagline "Create a New Directory Category" %>

<!-- BreadCrumbs -->
<div class="row">
	<div class="col-lg-12">

		<!-- Bread Crumb -->
		<ol class="breadcrumb">
			<li><%= link_to "Home", directory_root_path %><i class="fa fa-circle"></i></li>
			<li><%= link_to "Directory Categories", directory_categories_path %><i class="fa fa-circle"></i></li>
			<li class="active"><%= yield(:phc_title_tagline) %></li>
		</ol>

	</div>
</div>

<!-- Page Title -->
<div class="row">
	<div class="col-lg-12">

		<h3 class="page-title">
			<%= yield(:phc_title) %> </br>
			<small><%= yield(:phc_title_tagline) %></small>
		</h3>

	</div>
</div>

<!-- Main Content -->
<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-header">
				<%= yield(:phc_title_tagline) %>
			</div>
			<div class="card-block">
				<%= render 'form' %>
			</div>
		</div>

	</div>
</div>
