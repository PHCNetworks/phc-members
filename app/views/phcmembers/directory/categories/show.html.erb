<!-- Title System -->
<% phc_title  "PHCMembers - Directory Category Manager" %>
<% phc_title_tagline "Detail Information for " + @directory_category.catname %>

<!-- BreadCrumbs -->
<div class="row">
	<div class="col-lg-12">

		<!-- Bread Crumb -->
		<ol class="breadcrumb">
			<li><%= link_to "Directory Home", directory_root_path %></li>
			<li><%= link_to "Directory Categories", directory_categories_path %></li>
			<li class="active"><%= yield(:phc_title_tagline) %></li>
		</ol>

	</div>
</div>

<!-- Page Title -->
<div class="row">
	<div class="col-lg-12">

		<h3 class="page-title">
			<%= yield(:phc_title) %> </br>
			<small><%= yield(:phc_title_tagline) %></small>
		</h3>

	</div>
</div>

<!-- Main Content -->
<div class="row">
	<%= render 'phcmembers/directory/categories/components/category_main' %>
</div>
