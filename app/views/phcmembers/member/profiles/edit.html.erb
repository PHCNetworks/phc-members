<!-- Title System -->
<% phc_title "PHCMembers - Member Profile Manager" %>
<% phc_title_tagline "Create a New Member Profile" %>

<div class="page-bar">

	<!-- Bread Crumbs -->
	<ul class="page-breadcrumb">
		<li><%= link_to "Dashboard", members_root_path %><i class="fa fa-circle"></i></li>
		<li><%= link_to "Members Profile List", member_profiles_path %><i class="fa fa-circle"></i></li>
		<li class="active"><%= yield(:phc_title_tagline) %></li>
	</ul>

</div>

<!-- Page Title -->
<h3 class="page-title">
	<%= yield(:phc_title) %> </br>
	<small><%= yield(:phc_title_tagline) %></small>
</h3>

<!-- Main Content -->
<div class="row">
	<div class="col-lg-12">

		<div class="portlet light">

			<div class="portlet-title">
				<div class="caption">
					<span class="caption-subject bold uppercase"><%= yield(:phc_title_tagline) %></span>
				</div>
				<div class="actions">
				</div>
			</div>

			<div class="portlet-body">
				<%= render 'form', member_profile: @member_profile %>
			</div>

		</div>

	</div>
</div>
