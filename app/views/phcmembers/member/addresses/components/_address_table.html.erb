<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead class="thead-inverse">
			<tr>
				<th>Street Address</th>
				<th>City</th>
				<th>Province</th>
				<th>Country</th>
				<th>Postal Code</th>
				<th>Address Type</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= link_to @member_address.address_address_line_1, phcmembers.edit_member_profile_address_path %></td>
				<td><%= link_to @member_address.address_city, phcmembers.edit_member_profile_address_path %></td>
				<td><%= link_to @member_address.address_province, phcmembers.edit_member_profile_address_path %></td>
				<td><%= link_to @member_address.address_country, phcmembers.edit_member_profile_address_path %></td>
				<td><%= link_to @member_address.address_postal_code, phcmembers.edit_member_profile_address_path %></td>
				<td><%= link_to @member_address.address_type, phcmembers.edit_member_profile_address_path %></td>
				<td>
					<div class="btn-group d-flex" role="group">
						<%= link_to 'Update', edit_member_profile_address_path, class: "btn btn-purple btn-xs" %>
						<%= link_to 'Remove', member_profile_address_path, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure? This will remove listing information and cannot be reversed.' } %>
					</div>
				</td>
			</tr>
		</tbody>
	</table>
</div>
