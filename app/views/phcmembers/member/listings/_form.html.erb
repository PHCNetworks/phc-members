<!-- PHCMembers Form - Web Directory Listings -->
<%= form_for([@member_listing.profile, @member_listing], url: form_url) do |phc_members_member_listings| %>

	<!-- PHCNotifi Render Validation -->
	<%= render 'phcnotifi/validations', :object => @member_listing %>
	<!-- PHCNotifi Render Validation -->

	<!-- PHCMembers Fields - Web Directory Listings -->
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_company_name, "Company Name" %>
		<%= phc_members_member_listings.text_field :listing_company_name, class: "form-control", placeholder: "Business/Organization: Name" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_contact_name, "Contact Name" %>
		<%= phc_members_member_listings.text_field :listing_contact_name, class: "form-control", placeholder: "Business/Organization: Contact Person" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_address_line_1, "Address Line 1" %>
		<%= phc_members_member_listings.text_field :listing_address_line_1, class: "form-control", placeholder: "Location: Street Address" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_address_line_2, "Address Line 2" %>
		<%= phc_members_member_listings.text_field :listing_address_line_2, class: "form-control", placeholder: "Location: Box - Suite - Floor" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_city, "City" %>
		<%= phc_members_member_listings.text_field :listing_city, class: "form-control", placeholder: "Location: City" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_province, "Province/State" %>
		<%= phc_members_member_listings.text_field :listing_province, class: "form-control", placeholder: "Location: Province/State" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_country, "Country" %>
		<%= phc_members_member_listings.text_field :listing_country, class: "form-control", placeholder: "Country" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_postal_code, "Postal Code" %><br>
		<%= phc_members_member_listings.text_field :listing_postal_code, class: "form-control", placeholder: "Location: PostalCode" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_phone, "Business Phone Number" %>
		<%= phc_members_member_listings.text_field :listing_phone, class: "form-control", placeholder: "Business/Organization: PhoneNumber (Public)" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_contact_email, "Business General Email" %>
		<%= phc_members_member_listings.text_field :listing_contact_email, class: "form-control", placeholder: "Business/Organization: Email Address (Public)" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.label :listing_website, "Business Website" %>
		<%= phc_members_member_listings.text_field :listing_website, class: "form-control", placeholder: "Business/Organization: Website (Public)" %>
	</div>
	<div class="form-group field_with_errors">
		<%= phc_members_member_listings.collection_check_boxes :category_ids, Phcmembers::Directory::Category.all, :id, :category_name do |listing_category| %>
			<%= listing_category.check_box %>
			<%= listing_category.label %></br>
		<% end %>
	</div>
	<br>
	<div class="actions">
		<%= phc_members_member_listings.submit class: "btn btn-primary btn-gradient waves-effect waves-light btn-md" %>
	</div>
	<br>
	<!-- PHCMembers Fields - Web Directory Listings -->

<% end %>
<!-- PHCMembers Form - Web Directory Listings -->
