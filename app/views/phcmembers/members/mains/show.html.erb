<!-- Bread Crumbs -->
<header id="page-header">
	<h1><%= @members_main.mfirstname %> Detailed Profile</h1>
	<ol class="breadcrumb">
		<li><%= link_to "Home", members_root_path %></li>
		<li class="active"><%= link_to "Members List", members_mains_path %></li>
	</ol>
</header>

<div class="container">
	<div class="row">

		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<p><strong>Member Creation Date:</strong> <%= @members_main.created_at %></p>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" >

			<div class="panel panel-info">

				<div class="panel-heading">
					<h3 class="panel-title"><%= @members_main.mfirstname %> <%= @members_main.mlastname %></h3>
				</div>

				<div class="panel-body">
					<div class="row">

						<div class="col-md-3 col-lg-3 " align="center">
							<%= image_tag @members_main.gravatar_url, :class => 'img-circle img-responsive' %>
						</div>

						<div class=" col-md-9 col-lg-9 "> 
							<table class="table table-user-information">
								<tbody>
									<tr>
										<tr>
											<td>Job/Contact Title:</td>
											<td><%= @members_main.mtitle %></td>
										</tr>
										<tr>
											<td>Home Address</td>
											<td><%= @members_main.contacts.first.mccity %> - <%= @members_main.contacts.first.mcprovince %></td>
										</tr>
										<tr>
											<td>Email</td>
											<td><%= mail_to @members_main.memail %></td>
										</tr>
										<tr>
											<td>Phone Number</td>
											<td><%= @members_main.mphone %></td>
										</tr>
									</tr>
								</tbody>
							</table>
						</div>

					</div>
				</div>

			</div>

		</div>

	</div>

</div>
