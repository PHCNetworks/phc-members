<!-- Title System -->
<% phc_title "Member Business Manager" %>
<% phc_title_tagline "Business Index for " + @members_main.mfirstname + " " + @members_main.mlastname %>

<!-- BreadCrumbs -->
<div class="row">
	<div class="col-lg-12">

		<!-- Bread Crumb -->
		<ol class="breadcrumb">
		<li><%= link_to "Home", members_root_path %><i class="fa fa-circle"></i></li>
		<li><%= link_to "Members List", members_mains_path %><i class="fa fa-circle"></i></li>
		<li class="active"><%= @members_main.mfirstname + ' ' + @members_main.mlastname %> Business Index</li>
		</ol>

	</div>
</div>


<!-- Page Title -->
<div class="row">
	<div class="col-lg-12">

		<h3 class="page-title">
	<%= yield(:phc_title) %> </br>
	<small><%= yield(:phc_title_tagline) %></small>
		</h3>

	</div>
</div>


<!-- Main Content -->
<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-header">
				<%= yield(:phc_title) %>
			</div>
			<div class="card-block">
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
	
						<thead class="thead-inverse">
							<tr>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Email</th>
								<th>Phone</th>
							</tr>
						</thead>

						<tbody>
							<% @members_mains.each do |members_main| %>
								<tr>
									<td class="highlight"><%= link_to members_main.mfirstname, members_main %></td>
									<td class="highlight"><%= link_to members_main.mlastname, members_main %></td>
									<td class="highlight"><%= link_to members_main.memail, members_main %></td>
									<td class="highlight"><%= link_to members_main.mphone, members_main %></td>
								</tr>
							<% end %>
						</tbody>

					</table>
				</div>
			</div>
		</div>

	</div>
</div>
